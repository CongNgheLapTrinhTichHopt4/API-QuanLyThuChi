@using Data_QLThuChi.Entities;

@model HanMucChi

@{
    ViewBag.Title = "SuaHanMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Sửa Hạn Mức Chi</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="~/HamMuc/IndexHanMuc">Hạn Mức Chi</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Sửa</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Sửa Hạn Mức Chi</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form action="ThemHanMuc" method="post">
                        <input type="hidden" id="id" name="id" value="@Model.id" />
                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label class="font-normal">Loại Khoản Chi</label>
                            </div>
                            <div class="col-sm-10">
                                <select data-placeholder="Chọn loại khoản chi" class="chosen-select" tabindex="2" name="loaikc">
                                    @foreach (var item in ViewBag.LoaiKhoanChi)
                                    {
                                        var select = "";
                                        if (@item.malkc == Model.loaikhoanchi)
                                        {
                                            select = "selected";
                                        }
                                        <option @select value="@item.malkc">@item.tenlkc</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Hạn Mức</label>
                            <div class="col-sm-10"><input type="number" name="hanmuc" class="touchspin3" value="@Model.hanmuc"></div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group row" id="data_4">
                            <div class="col-sm-2">
                                <label class="font-normal">Tháng Hạn Mức</label>
                            </div>
                            <div class="col-sm-10">
                                <div class="input-group date" data-date-format="yyyy-mm">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="thoigian" class="form-control" value="@Model.thoigian">
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white btn-sm" href="~/HanMuc/IndexHanMuc">Hủy Bỏ</a>
                                <button class="btn btn-primary btn-sm" type="submit">Sửa</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



