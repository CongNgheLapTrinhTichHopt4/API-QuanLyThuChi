@using Data_QLThuChi.Entities;

@model KhoanVay_ChoVay
@{
    ViewBag.Title = "SuaKhoanVay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Quản Lý Khoản Vay</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="~/KhoanVay/Index">Khoản Vay</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Sửa Khoản Vay</strong>
            </li>
        </ol>
    </div>
</div>

<form action="SuaKhoanVay" method="post" role="form" enctype="multipart/form-data">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Thêm Mới Khoản Vay</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#" class="dropdown-item">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <input type="hidden" id="id" name="id" value="@Model.id" />
                        @*<div class="form-group  row">
                                <label class="col-sm-2 col-form-label">Mã Khoản Thu</label>
                                <div class="col-sm-10"><input type="text" name="makt" class="form-control" value="@Model.makt"></div>
                            </div>*@

                        <div class="form-group row" id="data_1">
                            <div class="col-sm-2">
                                <label class="font-normal">Ngày Vay</label>
                            </div>
                            <div class="col-sm-10">
                                <div class="input-group date" data-date-fomat="dd-mm-yyyy">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="ngayvay" class="form-control" value="@Model.ngayvay.ToString("dd-MM-yyyy")" required= "">
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Số Tiền</label>
                            <div class="col-sm-9">
                                <input type="number" name="sotien" class="form-control" value="@Model.sotien" required= "">
                            </div>
                            <div class="col-sm-1">
                                <label>VNĐ</label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label class="font-normal">Người Cho Vay</label>
                            </div>
                            <div class="col-sm-10">
                                <select data-placeholder="Chọn tài khoản" class="chosen-select" tabindex="2" name="nguoivay">
                                    @foreach (var item in ViewBag.Nguoivay)
                                    {
                                        var select = "";
                                        if (item.id == Model.nguoivay)
                                        {
                                            select = "selected";
                                        }
                                        <option @select value="@item.id">@item.ten</option>
                                    }
                                </select>
                            </div>
                        </div>



                            <div class="form-group row">
                                <div class="col-sm-2">
                                    <label class="font-normal">Đến Tài Khoản</label>
                                </div>
                                <div class="col-sm-10">
                                    <select data-placeholder="Chọn tài khoản" class="chosen-select" tabindex="2" name="taikhoanchitieu">
                                        @foreach (var item in ViewBag.TaiKhoanChiTieu)
                                        {
                                            var select = "";
                                            if (item.id == Model.taikhoanchitieu)
                                            {
                                                select = "selected";
                                            }
                                            <option @select value="@item.id">@item.tentaikhoan</option>
                                        }
                                    </select>
                                </div>
                            </div>







                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <a class="btn btn-white btn-sm" href="~/KhoanVay/Index">Hủy Bỏ</a>
                                    <button class="btn btn-primary btn-sm" type="submit">Sửa</button>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</form>



