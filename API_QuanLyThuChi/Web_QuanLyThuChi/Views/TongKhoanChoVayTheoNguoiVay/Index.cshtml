@using Data_QLThuChi.Entities;

@model IEnumerable<TongKhoanChoVayTheoNguoiVay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Quản Lý Khoản Cho Vay</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="~/KhoanChoVay/Index">/ Khoản Cho Vay</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Tổng Khoản Cho Vay Theo Người Vay</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="~/KhoanChoVay/ThemKhoanChoVay" class="btn btn-primary">Thêm Mới</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-1">
                <a href="~/KhoanChoVayChuaTra/Index" class="btn btn-primary">Khoản Chưa Trả</a>
            </div>
            <div class="col-sm-1">
                <a href="~/KhoanChoVayDaTra/Index" class="btn btn-primary">Khoản Đã Trả</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Danh sách tổng khoản Cho Vay theo người vay</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>

                                    <th>id</th>
                                  
                                    <th>Người vay</th>
                                    <th>SĐT</th>
                                    <th>Tổng tiền còn nợ</th>
                                    

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="grade">
                                @if (Model != null)
                                {
                                    foreach (var x in Model)
                                    {
                                        <tr>

                                            <td>@x.id</td>
                                      
                                            <td>@x.nguoivay</td>
                                            <td>@x.sdt</td>
                                            <td>@x.tongconno.ToString("N0")</td>
                                           
                                            

                                            <td>
                                                <a href="@Url.Action("SuaKhoanChoVay", "KhoanChoVay", new {@id = @x.id})">
                                                    <span class="fa fa-pencil-square-o" title="Sửa"></span>
                                                </a>
                                                <a href="@Url.Action("Delete", "KhoanChoVay", new {@id = @x.id})" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                                    <span class="fa fa-trash" title="Xóa"></span>
                                                </a>
                                            </td>

                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>

                                    <th>id</th>

                                    <th>Người vay</th>
                                    <th>SĐT</th>
                                    <th>Tổng tiền còn nợ</th>


                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






