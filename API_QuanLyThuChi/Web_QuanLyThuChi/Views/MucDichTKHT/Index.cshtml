@using Data_QLThuChi.Entities;
@model IEnumerable<MucDichTietKiem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-10">
        <h2>Quản Lý Mục Đích Tiết Kiệm</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item active">
                <a href="~/MucDichTietKiem/Index">Mục Đích Tiết Kiệm</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Mục Đích Đã Hoàn Thành</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Danh Sách Mục Đích Tiết Kiệm Đã Hoàn Thành</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Tên Mục Đích</th>
                                    <th>Số Tiền Dự Kiến</th>
                                    <th>Ngày Bắt Đầu</th>
                                    <th>Ngày Kết Thúc</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody class="grade">
                                @if (Model != null)
                                {
                                    foreach (var x in Model)
                                    {
                                        <tr>

                                            <td>@x.tenmucdich</td>
                                            <td>@x.sotiendukien.ToString("N0")</td>
                                            <td>@x.ngaybatdau.ToString("dd-MM-yyyy")</td>
                                            <td>@x.ngayketthuc.ToString("dd-MM-yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("SuaMucDichTietKiem", "MucDichTietKiem", new {@maMD = @x.maMD})">
                                                    <span class="fa fa-pencil-square-o" title="Sửa"></span>
                                                </a>
                                                <a href="@Url.Action("Delete", "MucDichTietKiem", new {@maMD = @x.maMD})" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                                    <span class="fa fa-trash" title="Xóa"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Tên Mục Đích</th>
                                    <th>Số Tiền Dự Kiến</th>
                                    <th>Ngày Bắt Đầu</th>
                                    <th>Ngày Kết Thúc</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

