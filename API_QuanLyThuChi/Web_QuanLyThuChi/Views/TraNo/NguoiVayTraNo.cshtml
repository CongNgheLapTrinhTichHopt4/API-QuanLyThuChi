@using Data_QLThuChi.Entities;

@model KhoanChoVay

@{
    ViewBag.Title = "NguoiVayTraNo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Người Vay Trả Nợ</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="~/KhoanChoVay/Index">Khoản Cho Vay</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Trả Nợ</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-4">
            <div class="contact-box">
                <a class="row" href="profile.html">
                    <div class="col-4">
                        <div class="text-center">
                            <img alt="image" class="rounded-circle m-t-xs img-fluid" src="~/Content/img/loan.png">
                            @*<div class="m-t-xs font-bold">Khoản Nợ</div>*@
                        </div>
                    </div>
                    <div class="col-8">
                        <h3><strong>Khoản Nợ</strong></h3>
                        <p><i class="fa fa-user-o"></i> Người Vay: @Model.nguoivay</p>
                        <p><i class="fa fa-clock-o"></i> Ngày Vay: @Model.ngayvay.ToString("dd-MM-yyyy")</p>
                        <p><i class="fa fa-money"></i> Số Tiền Vay: @Model.sotien.ToString("N0")</p>
                        <p><i class="fa fa-money"></i> Số Đã Trả: @Model.sotiendatra.ToString("N0")</p>
                        <p><i class="fa fa-money"></i> Số Còn Nợ: <strong>@Model.sotienchuatra.ToString("N0")</strong></p>
                    </div>
                </a>
            </div>
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Người Vay Trả Tiền</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form action="NguoiVayTraNo" method="post">
                        <div class="form-group row" id="data_1">
                            <div class="col-sm-2">
                                <label class="font-normal">Ngày trả</label>
                            </div>
                            <div class="col-sm-10">
                                <div class="input-group date" data-date-format="dd-mm-yyyy">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="ngaytra" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")">
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Số Tiền</label>
                            <div class="col-sm-9">
                                <input type="number" name="sotientra" class="form-control" pattern="[0-9]" title="Nhập số tiền là số!" required="" value="@Model.sotienchuatra">
                            </div>
                            <div class="col-sm-1">
                                <label>VNĐ</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label class="font-normal">Đến Tài Khoản</label>
                            </div>
                            <div class="col-sm-10">
                                <select data-placeholder="Chọn tài khoản" class="chosen-select" tabindex="2" name="loaitaikhoan">
                                    <option value="1">Ví</option>
                                    <option value="2">ATM</option>
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white btn-sm" href="~/Home/Index">Hủy Bỏ</a>
                                <button class="btn btn-primary btn-sm" type="submit">Trả Nợ</button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            @{Html.RenderAction("LichSuTraNo", "TraNo");}
        </div>
    </div>
</div>

