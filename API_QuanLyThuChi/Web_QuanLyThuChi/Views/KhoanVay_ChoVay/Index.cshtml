@using Data_QLThuChi.Entities;

@model IEnumerable<KhoanVay_ChoVay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Quản Lý Khoản Vay,Cho Vay</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Khoản Vay, Cho Vay</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="~/KhoanVay/ThemKhoanVay" class="btn btn-primary">Thêm Mới</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Danh sách khoản vay, cho vay</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                   
                                    <th>Ngày Vay</th>
                                    <th>Số Tiền</th>
                                    <th>Thành Viên</th>
                                    <th>Loại</th>
                                    <th>Người Vay</th>
                                    <th>Tài Khoản Chi Tiêu</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="grade">
                                @if (Model != null)
                                {
                                    foreach (var x in Model)
                                    {
                                        <tr>
                                           
                                            <td>@x.ngayvay</td>
                                            <td>@x.sotien</td>
                                            <td>@x.thanhvien</td>
                                            <td>@x.loai</td>
                                            <td>@x.nguoivay</td>
                                            <td>@x.taikhoanchitieu</td>
                                            <td>
                                                <a href="@Url.Action("SuaKhoanVay", "KhoanVay", new {@id = @x.id})">
                                                    <span class="fa fa-pencil-square-o" title="Sửa"></span>
                                                </a>
                                                <a href="@Url.Action("Delete", "KhoanVay", new {@id = @x.id})" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                                    <span class="fa fa-trash" title="Xóa"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                   
                                    <th>Ngày Vay</th>
                                    <th>Số Tiền</th>
                                    <th>Thành Viên</th>
                                    <th>Loại</th>
                                    <th>Người Vay</th>
                                    <th>Tài Khoản Chi Tiêu</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




