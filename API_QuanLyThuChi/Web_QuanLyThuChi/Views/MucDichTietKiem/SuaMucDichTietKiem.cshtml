@using Data_QLThuChi.Entities;

@model MucDichTietKiem

@{
    ViewBag.Title = "SuaMucDichTietKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">
        <h2>Quản Lý Mục Đích Tiết Kiệm</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="~/MucDichTietKiem/Index">Mục Đích Tiết Kiệm</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Sửa Mục Đích Tiết Kiệm</strong>
            </li>
        </ol>
    </div>
</div>

<form action="SuaMucDichTietKiem" method="post" role="form" enctype="multipart/form-data">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Sửa Mục Đích Tiết Kiệm</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#" class="dropdown-item">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <input type="hidden" id="maMD" name="maMD" value="@Model.maMD" />




                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Tên Mục Đích</label>
                            <div class="col-sm-10"><input type="text" name="tenmucdich" class="form-control" value="@Model.tenmucdich" required=""></div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Số Tiền Dự Kiến</label>
                            <div class="col-sm-9">
                                <input type="number" name="sotiendukien" class="form-control" value="@Model.sotiendukien" required="">
                            </div>
                            <div class="col-sm-1">
                                <label>VNĐ</label>
                            </div>
                        </div>

                        <div class="form-group row" id="data_1">
                            <div class="col-sm-2">
                                <label class="font-normal">Ngày bắt đầu</label>
                            </div>
                            <div class="col-sm-10">
                                <div class="input-group date" data-date-format="dd-mm-yyyy">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="ngaybatdau" class="form-control" value="@Model.ngaybatdau.ToString("dd-MM-yyyy")" required="">
                                </div>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>

                        <div class="form-group row" id="data_1">
                            <div class="col-sm-2">
                                <label class="font-normal">Ngày kết thúc</label>
                            </div>
                            <div class="col-sm-10">
                                <div class="input-group date" data-date-format="dd-mm-yyyy">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" name="ngayketthuc" class="form-control" value="@Model.ngayketthuc.ToString("dd-MM-yyyy")" required="">
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white btn-sm" href="~/MucDichTietKiem/Index">Hủy Bỏ</a>
                                <button class="btn btn-primary btn-sm" type="submit">Sửa</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



